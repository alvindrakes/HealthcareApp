<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C125A"
    android:minHeight="0dp"
    android:minWidth="0dp">

    <EditText
        android:id="@+id/agef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weightf"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/agef"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/weightf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_fitness_center_white_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="number"
        android:labelFor="@+id/weightf"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/weightf"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/heightf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weightf"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ruler"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Height"
        android:inputType="number"
        android:labelFor="@+id/heightf"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/heightf"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/Extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="77dp"
        android:layout_marginTop="94dp"
        android:text="Need a few more infos to get started"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/Next"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/begin" />

</android.widget.RelativeLayout>