<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alvindrakes.loginpage">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GoogleSigninAuthentication"
            android:theme="@android:style/Theme.NoDisplay"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignupPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Store"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StartPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Signup2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfilePage"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MyLocationUsingHelper"
            android:label="MyLocation"
            android:screenOrientation="portrait" />

        <activity android:name=".MyLocationUsingLocationAPI">

        </activity>


        <activity
            android:name=".SettingPage"
            android:screenOrientation="portrait" />
        <activity android:name=".SleepTracker"></activity>

        <receiver android:name=".AlarmReceiver"/>
        
        <service android:name=".RingtonePlayingService"
            android:enabled="true">

        </service>
    </application>


</manifest>